// .devcontainer/devcontainer.json
// For format details, see https://aka.ms/devcontainer.json
{
  "name": "Python 3 + Node.js 22 + Claude CLI (CUDA‑enabled)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",
  "runArgs": [
    "--gpus",
    "all"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python",
        "python.languageServer": "Pylance"
      }
    }
  },
  "containerEnv": {
    "CUDA_VISIBLE_DEVICES": "0"
  },
  "forwardPorts": [
    8888,
    6006,
    5000
  ],
  "mounts": [
    "source=${localEnv:HOME}/.config/claude,target=/home/vscode/.config/claude,type=bind",
    "source=${localEnv:HOME}/.npm,target=/home/vscode/.npm,type=bind",
    "source=${localEnv:HOME}/.cache/pip,target=/home/vscode/.cache/pip,type=bind"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "/bin/bash .devcontainer/setup-claude.sh"
}
